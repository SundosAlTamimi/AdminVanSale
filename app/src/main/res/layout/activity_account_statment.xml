<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:background="@color/white"
    android:id="@+id/linearMain"
    android:orientation="vertical"
    android:padding="2dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_width="match_parent"

        >

        <TextView
            android:id="@+id/print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="9"
            android:visibility="gone"
            android:gravity="center"
            android:padding="2dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.5"
            android:text="@string/AccountStatment"
            android:textColor="@color/colorblue_dark"
            android:autoSizeTextType="uniform"
            android:textSize="16sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/getAccountList_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_weight="1.5"
  />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/row221"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:padding="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="2.9"
            android:gravity="center"
            android:text="@string/customerName"
            android:textColor="@color/darkGray"
            android:textSize="12sp" />
        <Spinner
            android:id="@+id/cat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:layout_weight="2.3"

            android:gravity="center"
            android:padding="3dp" />
        <Button
            android:id="@+id/preview_button_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/btn_login"
            android:text="@string/preview"
            android:textColor="@color/colorblue_dark" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0"
        android:background="@color/colorblue_dark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_voucherNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/voucherNo"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView_transName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/transName"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView_date_voucher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/date_voucher"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView_debit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:text="@string/debit"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView_cridit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:text="@string/credit"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/balance"
            android:textStyle="bold" />
    </LinearLayout>



    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"

        android:layout_margin="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:background="@drawable/btn_sighn_up"

            android:orientation="vertical"
            >

        </androidx.recyclerview.widget.RecyclerView>

<!--        <LinearLayout-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_width="match_parent"-->
<!--            android:background="@color/colorblue_dark"-->
<!--            android:layout_alignBottom="@id/recyclerView_report"-->
<!--            android:orientation="horizontal">-->
<!--            <TextView android:layout_height="wrap_content"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_weight="2"-->
<!--                android:textStyle="bold"-->
<!--                android:gravity="center"-->
<!--                android:text="@string/total_balance"-->

<!--                android:textColor="@color/white"/>-->
<!--            <TextView-->
<!--                android:id="@+id/total_qty_text"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_weight="1"-->
<!--                android:textStyle="bold"-->
<!--                android:gravity="center"-->
<!--                android:text="00.00"-->

<!--                android:textColor="@color/white"/>-->
<!--        </LinearLayout>-->
    </RelativeLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorblue_dark"
        android:layout_alignBottom="@id/recyclerView_report"
        android:orientation="horizontal">
        <TextView android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/total_balance"

            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/total_qty_text"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:text="00.00"
            android:textSize="14sp"

            android:textColor="@color/white"/>
    </LinearLayout>
    <!--</ScrollView>-->


</LinearLayout>